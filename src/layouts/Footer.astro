---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-brand">
            <a href="/" class="footer-logo">
                <img
                    src="/logo-marketflex-letters.png"
                    alt="MarketFlex Logo"
                    class="logo-img"
                />
                <span class="logo-text">MarketFlex</span>
            </a>
            <p class="brand-desc">
                La plataforma de comercio digital diseñada para el futuro.
                Flexible, segura y veloz.
            </p>
        </div>

        <div class="footer-links-group">
            <div class="footer-column">
                <h4>Plataforma</h4>
                <a href="/">Inicio</a>
                <a href="/about">Nosotros</a>
                <a href="/coming-soon">Explorar</a>
            </div>
            <div class="footer-column">
                <h4>Soporte</h4>
                <a href="/coming-soon">Contacto</a>
                <a href="/coming-soon">FAQ</a>
                <a href="/coming-soon">Términos</a>
            </div>
            <div class="footer-column">
                <h4>Social</h4>
                <div class="social-links">
                    <a
                        href="https://facebook.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Facebook"
                    >
                        <Icon name="lucide:facebook" />
                    </a>
                    <a
                        href="https://instagram.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Instagram"
                    >
                        <Icon name="lucide:instagram" />
                    </a>
                    <a
                        href="https://x.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="X (Twitter)"
                    >
                        <img
                            src="/logos/x-twitter.svg"
                            alt="X"
                            width="12"
                            height="12"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <p>&copy; {currentYear} MarketFlex. Todos los derechos reservados.</p>
    </div>
</footer>

<style>
    .footer {
        background: hsla(149, 37%, 15%, 0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        color: var(--foreground);
        padding: 4rem 1rem 1rem;
        margin-top: 4rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    @media (min-width: 768px) {
        .footer-container {
            grid-template-columns: 1fr 1.5fr;
        }
    }

    /* Brand Section */
    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--foreground);
        font-weight: 800;
        font-size: 1.5rem;
        letter-spacing: -0.02em;
    }

    .logo-img {
        height: 32px;
        width: auto;
        filter: brightness(0) invert(1); /* Make logo white for dark footer */
    }

    .brand-desc {
        color: #a0a0a0;
        line-height: 1.6;
        max-width: 300px;
        font-size: 0.9rem;
    }

    /* Links Section */
    .footer-links-group {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    @media (min-width: 640px) {
        .footer-links-group {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .footer-column {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer-column h4 {
        color: var(--foreground);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .footer-column a {
        color: #a0a0a0;
        text-decoration: none;
        transition: color 0.2s;
        font-size: 0.85rem;
    }

    .footer-column a:hover {
        color: var(--green-primary);
    }

    /* Social Links */
    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        color: var(--foreground);
        transition: all 0.2s ease;
    }

    .social-links a:hover {
        background: var(--green-primary);
        color: var(--green-900);
        transform: translateY(-2px);
    }

    .social-links a img {
        filter: invert(1);
        transition: filter 0.2s ease;
    }

    .social-links a:hover img {
        filter: invert(0) brightness(0.2);
    }

    /* Bottom Section */
    .footer-bottom {
        max-width: 1400px;
        margin: 0 auto;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        text-align: center;
        color: #666;
        font-size: 0.8rem;
    }
</style>
