---
import { Icon } from "astro-icon/components";
import styles from "./styles/Footer.module.css";

const currentYear = new Date().getFullYear();
---

<footer class={styles.footer}>
    <div class={styles.footerContainer}>
        <div class={styles.footerBrand}>
            <a href="/" class={styles.footerLogo}>
                <img
                    src="/logo-marketflex-letters.png"
                    alt="MarketFlex Logo"
                    class={styles.logoImg}
                />
                <span class={styles.logoText}>MarketFlex</span>
            </a>
            <p class={styles.brandDesc}>
                La plataforma de comercio digital diseñada para el futuro.
                Flexible, segura y veloz.
            </p>
        </div>

        <div class={styles.footerLinksGroup}>
            <div class={styles.footerColumn}>
                <h4>Plataforma</h4>
                <a href="/">Inicio</a>
                <a href="/about">Nosotros</a>
                <a href="/search?explore=true">Explorar</a>
            </div>
            <div class={styles.footerColumn}>
                <h4>Soporte</h4>
                <a href="/contacto">Contacto</a>
                <a href="/faq">FAQ</a>
                <a href="/terminos">Términos</a>
            </div>
            <div class={styles.footerColumn}>
                <h4>Social</h4>
                <div class={styles.socialLinks}>
                    <a
                        href="https://facebook.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Facebook"
                    >
                        <Icon name="lucide:facebook" />
                    </a>
                    <a
                        href="https://instagram.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Instagram"
                    >
                        <Icon name="lucide:instagram" />
                    </a>
                    <a
                        href="https://x.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="X (Twitter)"
                    >
                        <img
                            src="/logos/x-twitter.svg"
                            alt="X"
                            width="12"
                            height="12"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class={styles.footerBottom}>
        <p>&copy; {currentYear} MarketFlex. Todos los derechos reservados.</p>
    </div>
</footer>
