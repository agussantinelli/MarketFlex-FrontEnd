---
import { Icon } from "astro-icon/components";
---

<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="nav-logo">
            <img
                src="/logo-marketflex-letters.png"
                alt="MarketFlex Logo"
                class="logo-img"
            />
            <span class="logo-text">MarketFlex</span>
        </a>

        <button class="mobile-menu-btn" aria-label="Toggle menu">
            <Icon name="lucide:menu" class="icon-menu" />
            <Icon name="lucide:x" class="icon-close" />
        </button>

        <div class="nav-links">
            <a href="/" class="nav-link">
                <Icon name="lucide:home" class="link-icon" />
                Inicio
            </a>
            <a href="/about" class="nav-link">
                <Icon name="lucide:info" class="link-icon" />
                Nosotros
            </a>
            <a href="/coming-soon?success=true" class="nav-link">
                <Icon name="lucide:compass" class="link-icon" />
                Explorar
            </a>
            <div class="nav-auth-guest">
                <a href="/login" class="btn btn-primary btn-sm">
                    <Icon name="lucide:user" class="btn-icon" />
                    Conectar
                </a>
            </div>

            <div class="nav-auth-user" style="display: none;">
                <span class="user-greeting"
                    >Hola, <span id="user-name">Usuario</span></span
                >
                <button id="logout-btn" class="btn btn-outline btn-sm">
                    <Icon name="lucide:log-out" class="btn-icon" />
                    Salir
                </button>
            </div>
        </div>
    </div>
</nav>

<script>
    // Mobile Menu Logic
    const mobileBtn = document.querySelector(".mobile-menu-btn");
    const navLinks = document.querySelector(".nav-links");

    if (mobileBtn && navLinks) {
        mobileBtn.addEventListener("click", () => {
            navLinks.classList.toggle("active");
            mobileBtn.classList.toggle("active");
        });
    }

    // Auth Logic
    const authGuest = document.querySelector(".nav-auth-guest") as HTMLElement;
    const authUser = document.querySelector(".nav-auth-user") as HTMLElement;
    const userNameSpan = document.getElementById("user-name");
    const logoutBtn = document.getElementById("logout-btn");

    function updateAuthUI() {
        const userStr = localStorage.getItem("user");
        const token = localStorage.getItem("token");

        if (userStr && token) {
            const user = JSON.parse(userStr);
            if (userNameSpan)
                userNameSpan.textContent = user.nombre || "Usuario";

            if (authGuest) authGuest.style.display = "none";
            if (authUser) authUser.style.display = "flex";
        } else {
            if (authGuest) authGuest.style.display = "block";
            if (authUser) authUser.style.display = "none";
        }
    }

    // Initial check
    updateAuthUI();

    // Logout Handler
    if (logoutBtn) {
        logoutBtn.addEventListener("click", () => {
            localStorage.removeItem("token");
            localStorage.removeItem("user");
            window.location.href = "/login";
        });
    }
</script>

<style>
    /* Navbar Verde Crema */
    .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 0.75rem 1rem;
        background: var(--foreground);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 4px 20px -10px rgba(0, 0, 0, 0.1);
    }

    @media (min-width: 768px) {
        .navbar {
            padding: 0.75rem 2rem;
        }
    }

    .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--nav-text);
        font-weight: 800;
        font-size: 1.25rem;
        letter-spacing: -0.02em;
    }

    .logo-img {
        height: 38px;
        width: auto;
        object-fit: contain;
    }

    /* Mobile Menu Button */
    .mobile-menu-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 32px;
        height: 32px;
        background: transparent;
        border: none;
        cursor: pointer;
        z-index: 102; /* Above nav-links */
        padding: 0;
        color: var(--nav-text);
        position: relative;
    }

    .mobile-menu-btn .icon-menu,
    .mobile-menu-btn .icon-close {
        width: 28px;
        height: 28px;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
        position: absolute;
    }

    .mobile-menu-btn .icon-close {
        opacity: 0;
        transform: rotate(-90deg);
    }

    .mobile-menu-btn.active .icon-menu {
        opacity: 0;
        transform: rotate(90deg);
    }

    .mobile-menu-btn.active .icon-close {
        opacity: 1;
        transform: rotate(0);
    }

    /* Navigation Links - Mobile First */
    /* Navigation Links - Mobile First (Side Drawer) */
    .nav-links {
        position: fixed;
        top: 0;
        right: -100%;
        width: 75%;
        max-width: 300px;
        height: 100vh;
        background: var(--foreground);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 1.5rem;
        padding: 6rem 2rem 2rem;
        box-shadow: -5px 0 30px rgba(0, 0, 0, 0.15);

        /* Animation */
        transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 101;

        /* Ensure visibility is managed by 'right' property, not opacity/visibility for the drawer effect */
        opacity: 1;
        visibility: visible;
    }

    .nav-links.active {
        right: 0;
    }

    /* Desktop Navigation */
    @media (min-width: 768px) {
        .mobile-menu-btn {
            display: none;
        }

        .nav-links {
            position: static;
            height: auto;
            width: auto;
            max-width: none;
            padding: 0;
            background: transparent;
            box-shadow: none;
            flex-direction: row;
            justify-content: flex-end;
            align-items: center;
            gap: 2rem;

            /* Reset mobile positioning */
            right: auto;
            top: auto;
        }
    }

    .nav-link {
        text-decoration: none;
        color: var(--nav-text);
        opacity: 0.8;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-link:hover {
        opacity: 1;
        transform: translateY(-1px);
    }

    .link-icon {
        width: 18px;
        height: 18px;
    }

    .btn-icon {
        width: 16px;
        height: 16px;
        margin-right: 0.5rem;
        display: inline-block;
        vertical-align: middle;
    }

    /* Auth Styles */
    .nav-auth-user {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-greeting {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--nav-text);
    }

    .btn-outline {
        background: transparent;
        border: 1px solid var(--nav-text);
        color: var(--nav-text);
        transition: all 0.2s ease;
    }

    .btn-outline:hover {
        background: rgba(0, 0, 0, 0.05);
        transform: translateY(-1px);
    }
</style>
