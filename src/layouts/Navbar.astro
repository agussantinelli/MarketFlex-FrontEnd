---
import { Icon } from "astro-icon/components";
---

<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="nav-logo">
            <img
                src="/logo-marketflex-letters.png"
                alt="MarketFlex Logo"
                class="logo-img"
            />
            <span class="logo-text">MarketFlex</span>
        </a>

        <button class="mobile-menu-btn" aria-label="Toggle menu">
            <Icon name="lucide:menu" class="icon-menu" />
            <Icon name="lucide:x" class="icon-close" />
        </button>

        <div class="nav-links">
            <a href="/" class="nav-link">
                <Icon name="lucide:home" class="link-icon" />
                Inicio
            </a>
            <a href="/coming-soon" class="nav-link">
                <Icon name="lucide:compass" class="link-icon" />
                Explorar
            </a>
            <a href="/coming-soon" class="btn btn-primary btn-sm">
                <Icon name="lucide:user" class="btn-icon" />
                Conectar
            </a>
        </div>
    </div>
</nav>

<script>
    const mobileBtn = document.querySelector(".mobile-menu-btn");
    const navLinks = document.querySelector(".nav-links");

    if (mobileBtn && navLinks) {
        mobileBtn.addEventListener("click", () => {
            navLinks.classList.toggle("active");
            mobileBtn.classList.toggle("active");
        });
    }
</script>

<style>
    /* Navbar Verde Crema */
    .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 0.75rem 1rem;
        background: var(--foreground);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 4px 20px -10px rgba(0, 0, 0, 0.1);
    }

    @media (min-width: 768px) {
        .navbar {
            padding: 0.75rem 2rem;
        }
    }

    .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--nav-text);
        font-weight: 800;
        font-size: 1.25rem;
        letter-spacing: -0.02em;
    }

    .logo-img {
        height: 38px;
        width: auto;
        object-fit: contain;
    }

    /* Mobile Menu Button */
    .mobile-menu-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 32px;
        height: 32px;
        background: transparent;
        border: none;
        cursor: pointer;
        z-index: 102; /* Above nav-links */
        padding: 0;
        color: var(--nav-text);
        position: relative;
    }

    .mobile-menu-btn .icon-menu,
    .mobile-menu-btn .icon-close {
        width: 28px;
        height: 28px;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
        position: absolute;
    }

    .mobile-menu-btn .icon-close {
        opacity: 0;
        transform: rotate(-90deg);
    }

    .mobile-menu-btn.active .icon-menu {
        opacity: 0;
        transform: rotate(90deg);
    }

    .mobile-menu-btn.active .icon-close {
        opacity: 1;
        transform: rotate(0);
    }

    /* Navigation Links - Mobile First */
    .nav-links {
        position: fixed;
        top: 0;
        right: -100%;
        width: 100%;
        height: 100vh;
        background: var(--foreground);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 101;
    }

    .nav-links.active {
        right: 0;
    }

    /* Desktop Navigation */
    @media (min-width: 768px) {
        .mobile-menu-btn {
            display: none;
        }

        .nav-links {
            position: static;
            height: auto;
            width: auto;
            flex-direction: row;
            background: transparent;
            gap: 2.5rem;
        }
    }

    .nav-link {
        text-decoration: none;
        color: var(--nav-text);
        opacity: 0.8;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-link:hover {
        opacity: 1;
        transform: translateY(-1px);
    }

    .link-icon {
        width: 18px;
        height: 18px;
    }

    .btn-icon {
        width: 16px;
        height: 16px;
        margin-right: 0.5rem;
        display: inline-block;
        vertical-align: middle;
    }
</style>
