---
import "../styles/index.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import { Toaster } from "sileo";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/800.css";
import "sileo/styles.css";

interface Props {
	title: string;
	description?: string;
	showToaster?: boolean;
}

const {
	title,
	description = "MarketFlex - Your premium marketplace",
	showToaster = true,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="./logo-marketflex-circle.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		{showToaster && <Toaster client:only="react" />}
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
		<script>
			console.log("Layout script version 2 executing...");

			// Watch for changes in the DOM to see when the Toaster appears
			const observer = new MutationObserver(() => {
				const toaster = document.querySelector("[data-sileo-viewport]");
				if (toaster) {
					console.log("Sileo Toaster found in DOM via Observer!");
					observer.disconnect();
				}
			});

			observer.observe(document.body, { childList: true, subtree: true });

			window.addEventListener("load", () => {
				const toaster = document.querySelector("[data-sileo-viewport]");
				console.log("Sileo Toaster in DOM at load:", !!toaster);
			});
		</script>
	</body>
</html>
