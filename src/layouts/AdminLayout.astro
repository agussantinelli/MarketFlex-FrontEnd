---
import "../styles/globals.css";
import AdminSidebar from "../components/admin/AdminSidebar";
import AdminHeader from "../components/admin/AdminHeader.astro";
import LoadingSpinner from "../components/common/LoadingSpinner";
import { ViewTransitions } from "astro:transitions";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Panel de Administración MarketFlex" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/logo-marketflex-circle.png"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | MarketFlex Admin</title>
        <ViewTransitions />
        <script is:inline>
            window.showAdminLoader = () => {
                const overlay = document.getElementById("nav-loading-overlay");
                if (overlay) overlay.classList.add("active");
            };

            window.hideAdminLoader = () => {
                const overlay = document.getElementById("nav-loading-overlay");
                if (overlay) overlay.classList.remove("active");
            };

            // Start loader on transition
            document.addEventListener("astro:before-preparation", () => {
                window.showAdminLoader();
            });

            // Fallback: hide loader after 15 seconds if no component signals
            document.addEventListener("astro:page-load", () => {
                setTimeout(() => {
                    const overlay = document.getElementById(
                        "nav-loading-overlay",
                    );
                    if (overlay && overlay.classList.contains("active")) {
                        console.warn("Loader fallback triggered");
                        window.hideAdminLoader();
                    }
                }, 15000);
            });
        </script>
        <style>
            .admin-container {
                display: flex;
                min-height: 100vh;
                background-color: var(--background);
                position: relative;
            }
            .admin-main {
                flex: 1;
                margin-left: 260px; /* Width of the sidebar */
                display: flex;
                flex-direction: column;
                min-width: 0;
                transition: margin-left 0.3s ease;
            }
            .admin-content {
                flex: 1;
                padding: 2rem;
                overflow-y: auto;
                overflow-x: hidden; /* Evitar scroll horizontal global */
                min-width: 0;
            }

            @media (max-width: 1440px) {
                .admin-main {
                    margin-left: 260px; /* Mantener fijo hasta 1024 */
                }
            }

            @media (max-width: 1366px) {
                /* Ajuste sutil para laptops si fuera necesario, por ahora 260 esta ok */
            }

            @media (max-width: 1024px) {
                .admin-main {
                    margin-left: 0;
                }
                .admin-content {
                    padding: 1.5rem;
                }
            }

            @media (max-width: 768px) {
                .admin-content {
                    padding: 1rem;
                }
            }

            /* Neon Variables for Admin context */
            :root {
                --neon-green: #00ff88;
                --light-green: #34d399;
                --deep-black: #0f172a;
            }

            .nav-loading-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(15, 23, 42, 0.8);
                backdrop-filter: blur(8px);
                z-index: 9999;
                align-items: center;
                justify-content: center;
            }

            .nav-loading-overlay.active {
                display: flex;
            }
        </style>
    </head>
    <body>
        <div class="admin-container">
            <div id="nav-loading-overlay" class="nav-loading-overlay">
                <LoadingSpinner fullPage message="Cargando sección..." />
            </div>
            <AdminSidebar client:load />
            <div class="admin-main">
                <AdminHeader title={title} />
                <main class="admin-content">
                    <slot />
                </main>
            </div>
        </div>

        <!-- Sileo Root for notifications -->
        <span id="sileo-root"></span>

        <script>
            const checkAdminAccess = () => {
                const userStr = localStorage.getItem("marketflex_user");
                if (!userStr) {
                    window.location.href = "/login?redirect=/admin/dashboard";
                    return;
                }

                try {
                    const user = JSON.parse(userStr);
                    if (user.rol !== "admin") {
                        window.location.href = "/";
                        return;
                    }

                    const isAdminModeStr = localStorage.getItem(
                        "marketflex_admin:isAdminMode",
                    );
                    if (isAdminModeStr === "false") {
                        window.location.href = "/";
                        return;
                    }

                    if (localStorage.getItem("marketflex_admin:")) {
                        localStorage.removeItem("marketflex_admin:");
                    }
                } catch (e) {
                    window.location.href = "/login";
                }
            };

            checkAdminAccess();

            // Support for View Transitions
            document.addEventListener("astro:after-swap", checkAdminAccess);
        </script>
    </body>
</html>
