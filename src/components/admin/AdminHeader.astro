---
import { Icon } from "astro-icon/components";
import UserDropdown from "../shared/UserDropdown.astro";
import styles from "./styles/AdminHeader.module.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header class={styles.adminHeader}>
    <div class={styles.headerLeft}>
        <div class={styles.breadcrumb}>
            <span class={styles.breadcrumbText}>Administraci√≥n</span>
            <Icon name="lucide:chevron-right" class={styles.breadcrumbIcon} />
            <span class={styles.breadcrumbTitle}>{title}</span>
        </div>
    </div>

    <div class={styles.headerRight}>
        <div class={styles.searchContainer}>
            <Icon name="lucide:search" class={styles.searchIcon} />
            <input 
                type="text" 
                placeholder="Buscar (Ctrl+K)" 
                class={styles.searchInput}
            />
            <div class={styles.searchShortcut}>/</div>
        </div>

        <button class={styles.notificationBtn} aria-label="Notificaciones">
            <Icon name="lucide:bell" class={styles.bellIcon} />
            <span class={styles.notificationBadge}></span>
        </button>

        <div class={styles.divider}></div>

        <UserDropdown />
    </div>
</header>
