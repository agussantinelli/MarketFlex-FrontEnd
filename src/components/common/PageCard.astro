---
interface Props {
    maxWidth?: string;
}

const { maxWidth = "800px" } = Astro.props;
---

<div class="page-card-container" style={`--card-max-width: ${maxWidth}`}>
    <div class="page-card">
        <div
            class="decorative-cross decorative-dark"
            style="top: 15px; right: 15px;"
        >
        </div>
        <div
            class="decorative-cross decorative-dark"
            style="bottom: 15px; left: 15px;"
        >
        </div>
        <div
            class="decorative-cross decorative-dark"
            style="bottom: 15px; right: 15px;"
        >
        </div>

        <div
            class="decorative-cross decorative-x"
            style="top: 50%; left: 15px; opacity: 0.3"
        >
        </div>
        <div
            class="decorative-cross decorative-x"
            style="top: 50%; right: 15px; opacity: 0.3"
        >
        </div>

        <div
            class="decorative-cross decorative-darker"
            style="top: 15%; left: 50%; opacity: 0.2"
        >
        </div>
        <div
            class="decorative-cross decorative-darker"
            style="bottom: 15%; left: 50%; opacity: 0.2"
        >
        </div>

        <div
            class="decorative-cross decorative-x decorative-dark"
            style="top: 25%; left: 10%; opacity: 0.15"
        >
        </div>
        <div
            class="decorative-cross decorative-x decorative-dark"
            style="bottom: 25%; right: 10%; opacity: 0.15"
        >
        </div>

        <div
            class="decorative-cross decorative-x decorative-darker"
            style="top: 10%; right: 40%; opacity: 0.15"
        >
        </div>
        <div
            class="decorative-cross decorative-x decorative-darker"
            style="bottom: 10%; left: 40%; opacity: 0.15"
        >
        </div>
        <div
            class="decorative-cross decorative-x"
            style="bottom: 40%; right: 5%; opacity: 0.1"
        >
        </div>
        <div
            class="decorative-cross decorative-x"
            style="top: 40%; left: 5%; opacity: 0.1"
        >
        </div>

        <div class="page-card-content">
            <slot />
        </div>
    </div>
</div>

<style>
    .page-card-container {
        width: 92%;
        max-width: var(--card-max-width);
        margin: 4rem auto 4rem;
        min-height: 60vh;
        display: flex;
        flex-direction: column;
    }

    .page-card {
        background: var(--foreground);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-top: 4px solid var(--green-primary);
        padding: 3rem 2.5rem;
        border-radius: 24px;
        width: 100%;
        box-shadow:
            0 20px 40px -10px rgba(0, 0, 0, 0.3),
            0 0 20px rgba(74, 222, 128, 0.1);
        position: relative;
        overflow: hidden;
        flex-grow: 1;
    }

    .page-card-content {
        position: relative;
        z-index: 1;
    }

    .decorative-cross {
        position: absolute;
        width: 12px;
        height: 12px;
        opacity: 0.4;
        pointer-events: none;
    }

    .decorative-cross::before,
    .decorative-cross::after {
        content: "";
        position: absolute;
        background: var(--green-primary);
        border-radius: 1px;
    }

    .decorative-cross::before {
        top: 5px;
        left: 0;
        width: 100%;
        height: 2px;
    }

    .decorative-cross::after {
        top: 0;
        left: 5px;
        height: 100%;
        width: 2px;
    }

    .decorative-cross.decorative-x {
        transform: rotate(45deg);
    }

    .decorative-cross.decorative-dark::before,
    .decorative-cross.decorative-dark::after {
        background: var(--green-accent);
    }

    .decorative-cross.decorative-darker::before,
    .decorative-cross.decorative-darker::after {
        background: var(--green-800);
    }
</style>
