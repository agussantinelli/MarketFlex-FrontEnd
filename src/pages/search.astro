---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import ProductCard from "../components/products/ProductCard.astro";
import { searchProducts } from "../services/product.service";

const searchQuery = Astro.url.searchParams.get("q")?.trim() || "";
const sort = Astro.url.searchParams.get("sort") || "";
const typeParam = Astro.url.searchParams.get("type") || "";
const categoryParam = Astro.url.searchParams.get("category") || "";
const offersParam = Astro.url.searchParams.get("offers") || "";

const currentPage = parseInt(Astro.url.searchParams.get("page") || "1");
const limit = 20;

const response = await searchProducts({
    query: searchQuery,
    sort,
    type: typeParam,
    category: categoryParam,
    offers: offersParam,
    page: currentPage,
    limit,
});

const products = response.data;
const pagination = response.pagination;

// Helper to build pagination links
const getPageUrl = (page: number) => {
    const params = new URLSearchParams(Astro.url.searchParams);
    params.set("page", page.toString());
    return `/search?${params.toString()}`;
};

const startRange = (currentPage - 1) * limit + 1;
const endRange = Math.min(currentPage * limit, pagination.total);
---

<Layout
    title={`MarketFlex | ${searchQuery ? `Resultados: ${searchQuery}` : "Explorar Productos"}`}
>
    <section class="search-section">
        <div class="search-header">
            <h2 class="section-title">
                {
                    searchQuery ? (
                        <>
                            Resultados para "
                            <span class="gradient-text">{searchQuery}</span>"
                            <span class="result-count">
                                ({pagination.total})
                            </span>
                        </>
                    ) : (
                        <>
                            Explorando{" "}
                            <span class="gradient-text">Productos</span>
                            {typeParam && (
                                <span class="filter-tag">
                                    Tipo: {typeParam}
                                </span>
                            )}
                            {categoryParam && (
                                <span class="filter-tag">
                                    Categoría: {categoryParam}
                                </span>
                            )}
                            {offersParam && (
                                <span class="filter-tag">Ofertas</span>
                            )}
                            <span class="result-count">
                                ({pagination.total})
                            </span>
                        </>
                    )
                }
            </h2>

            <style>
                .filter-tag {
                    display: inline-block;
                    background: rgba(34, 197, 94, 0.1);
                    color: var(--primary);
                    padding: 0.25rem 0.75rem;
                    border-radius: 1rem;
                    font-size: 0.9rem;
                    margin: 0 0.5rem;
                    border: 1px solid rgba(34, 197, 94, 0.2);
                }
            </style>

            {
                /* Always show controls if we have products, OR if we are just exploring (to allow sorting/filtering of all items) */
            }
            {
                (products.length > 0 || !searchQuery) && (
                    <div class="search-controls">
                        <div class="sort-wrapper">
                            <select
                                class="sort-select"
                                onchange="window.location.href = this.value"
                            >
                                <option
                                    value={`/search?q=${searchQuery}&sort=`}
                                    selected={
                                        sort === "" || sort === "relevance"
                                    }
                                >
                                    Relevancia
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=price_asc`}
                                    selected={sort === "price_asc"}
                                >
                                    Menor Precio
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=price_desc`}
                                    selected={sort === "price_desc"}
                                >
                                    Mayor Precio
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=name_asc`}
                                    selected={sort === "name_asc"}
                                >
                                    A - Z
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=name_desc`}
                                    selected={sort === "name_desc"}
                                >
                                    Z - A
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=bestselling`}
                                    selected={sort === "bestselling"}
                                >
                                    Más Vendidos
                                </option>
                            </select>
                            <Icon
                                name="lucide:chevron-down"
                                class="sort-icon"
                            />
                        </div>
                        <button id="filter-btn" class="filter-btn">
                            <Icon
                                name="lucide:list-filter"
                                class="filter-icon"
                            />
                            Filtrar
                        </button>
                    </div>
                )
            }
        </div>

        {/* Modal Coming Soon - Keep existing */}
        <div id="filter-modal" class="modal-backdrop">
            <div class="modal-content">
                <button id="close-modal" class="modal-close">
                    <Icon name="lucide:x" />
                </button>
                <div class="modal-body">
                    <div class="modal-icon-wrapper">
                        <Icon name="lucide:sparkles" class="modal-icon" />
                    </div>
                    <h3 class="modal-title">Próximamente</h3>
                    <p class="modal-text">
                        Estamos trabajando en opciones de filtrado avanzadas
                        para que encuentres exactamente lo que buscás.
                    </p>
                    <button id="close-modal-btn" class="btn btn-primary">
                        Entendido
                    </button>
                </div>
            </div>
        </div>

        <script>
            // Filter modal logic
            const filterBtn = document.getElementById("filter-btn");
            const modal = document.getElementById("filter-modal");
            const closeBtn = document.getElementById("close-modal");
            const closeBtnAction = document.getElementById("close-modal-btn");

            if (filterBtn && modal && closeBtn && closeBtnAction) {
                filterBtn.addEventListener("click", () => {
                    modal.classList.add("active");
                    document.body.style.overflow = "hidden";
                });

                const closeModal = () => {
                    modal.classList.remove("active");
                    document.body.style.overflow = "";
                };

                closeBtn.addEventListener("click", closeModal);
                closeBtnAction.addEventListener("click", closeModal);

                modal.addEventListener("click", (e) => {
                    if (e.target === modal) closeModal();
                });
            }

            // Traditional Pagination logic is handled via SSR and URL params
        </script>

        {
            products.length > 0 ? (
                <>
                    <div class="products-grid" id="products-grid">
                        {products.map((product) => (
                            <ProductCard
                                product={product}
                                showFeatured={false}
                            />
                        ))}
                    </div>

                    {pagination.totalPages > 1 && (
                        <nav
                            class="pagination"
                            aria-label="Navegación de páginas"
                        >
                            <a
                                href={getPageUrl(currentPage - 1)}
                                class={`pagination-item prev ${currentPage === 1 ? "disabled" : ""}`}
                                aria-label="Página anterior"
                            >
                                <Icon name="lucide:chevron-left" />
                                <span>Anterior</span>
                            </a>

                            <div class="pagination-pages">
                                {Array.from(
                                    { length: pagination.totalPages },
                                    (_, i) => (
                                        <a
                                            href={getPageUrl(i + 1)}
                                            class={`pagination-item page ${currentPage === i + 1 ? "active" : ""}`}
                                            aria-label={`Ir a página ${i + 1}`}
                                        >
                                            {i + 1}
                                        </a>
                                    ),
                                )}
                            </div>

                            <a
                                href={getPageUrl(currentPage + 1)}
                                class={`pagination-item next ${currentPage === pagination.totalPages ? "disabled" : ""}`}
                                aria-label="Página siguiente"
                            >
                                <span>Siguiente</span>
                                <Icon name="lucide:chevron-right" />
                            </a>
                        </nav>
                        <div class="pagination-info">
                            Página <strong>{currentPage}</strong> de{" "}
                            <strong>{pagination.totalPages}</strong>, viendo los
                            productos <strong>{startRange}-{endRange}</strong> de{" "}
                            <strong>{pagination.total}</strong>
                        </div>
                    )}
                </>
            ) : (
                <div class="empty-results">
                    <div class="empty-icon-wrapper">
                        <Icon name="lucide:search-x" class="empty-icon" />
                    </div>
                    <h3 class="empty-title">
                        {searchQuery ? "Sin resultados" : "Catálogo vacío"}
                    </h3>
                    <p>
                        {searchQuery ? (
                            <>
                                No encontramos productos que coincidan con "
                                <strong>{searchQuery}</strong>".
                                <br />
                                Intentá con otras palabras clave.
                            </>
                        ) : (
                            "No hay productos disponibles en este momento."
                        )}
                    </p>
                    <div class="actions">
                        <a href="/" class="btn btn-secondary btn-sm">
                            Volver al Inicio
                        </a>
                        {searchQuery && (
                            <a href="/search" class="btn btn-primary btn-sm">
                                Ver Todos los Productos
                            </a>
                        )}
                    </div>
                </div>
            )
        }
    </section>
</Layout>

<style>
    .search-section {
        padding: 4rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
        min-height: 60vh;
    }

    .search-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-title {
        text-align: center;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        color: var(--foreground);
        font-weight: 800;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 0;
    }

    .sort-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        min-width: 200px;
    }

    .sort-select {
        appearance: none;
        background: rgba(20, 20, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2rem;
        padding: 0.75rem 1rem;
        padding-right: 2.5rem;
        color: var(--foreground);
        font-family: inherit;
        font-size: 0.9rem;
        width: 100%;
        cursor: pointer;
        backdrop-filter: blur(12px);
        transition: all 0.2s ease;
    }

    .sort-select:hover,
    .sort-select:focus {
        border-color: var(--primary);
        outline: none;
        background: rgba(20, 20, 20, 0.8);
    }

    .sort-icon {
        position: absolute;
        right: 1rem;
        color: #9ca3af;
        pointer-events: none;
        width: 16px;
        height: 16px;
    }

    @media (min-width: 768px) {
        .search-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .section-title {
            margin-bottom: 0;
        }
    }

    .search-controls {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }

    .filter-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: rgba(20, 20, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2rem;
        color: var(--foreground);
        font-weight: 600;
        cursor: pointer;
        backdrop-filter: blur(12px);
        transition: all 0.2s ease;
        font-family: inherit;
        font-size: 0.9rem;
    }

    .filter-btn:hover {
        background: rgba(20, 20, 20, 0.8);
        border-color: var(--primary);
        transform: translateY(-2px);
    }

    .filter-icon {
        width: 18px;
        height: 18px;
    }

    /* Modal Styles */
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .modal-backdrop.active {
        opacity: 1;
        visibility: visible;
    }

    .modal-content {
        background: #1a1a1a;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 2rem;
        width: 90%;
        max-width: 400px;
        position: relative;
        transform: translateY(20px);
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        text-align: center;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-backdrop.active .modal-content {
        transform: translateY(0);
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: transparent;
        border: none;
        color: #9ca3af;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition: all 0.2s;
    }

    .modal-close:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .modal-body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .modal-icon-wrapper {
        width: 64px;
        height: 64px;
        background: rgba(34, 197, 94, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .modal-icon {
        width: 32px;
        height: 32px;
        color: var(--primary);
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        color: white;
    }

    .modal-text {
        color: #9ca3af;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .result-count {
        font-size: 1rem;
        font-weight: 500;
        color: var(--green-cream);
        margin-left: 0.25rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    @media (min-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* Empty State Styling - Premium Glassmorphism */
    .empty-results {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(20, 20, 20, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        margin-top: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .empty-icon-wrapper {
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.05),
            rgba(255, 255, 255, 0.01)
        );
        padding: 1.5rem;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 20px rgba(34, 197, 94, 0.1);
    }

    .empty-icon {
        width: 48px;
        height: 48px;
        color: rgba(255, 255, 255, 0.8);
    }

    .empty-title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(to right, #fff, #a3a3a3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.02em;
    }

    .empty-results p {
        font-size: 1.125rem;
        color: #a3a3a3;
        margin-bottom: 2.5rem;
        max-width: 450px;
        line-height: 1.6;
    }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Pagination Styles */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin-top: 4rem;
        padding: 1.5rem;
        background: rgba(20, 20, 20, 0.4);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 2rem;
    }

    .pagination-pages {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .pagination-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.25rem;
        border-radius: 1.5rem;
        color: #a3a3a3;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        font-size: 0.9rem;
        border: 1px solid transparent;
    }

    .pagination-item:hover:not(.disabled) {
        color: white;
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .pagination-item.page {
        width: 40px;
        height: 40px;
        padding: 0;
        justify-content: center;
    }

    .pagination-item.active {
        background: var(--primary);
        color: black;
        font-weight: 700;
        box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
    }

    .pagination-item.active:hover {
        background: var(--primary);
        color: black;
        transform: none;
    }

    .pagination-item.disabled {
        opacity: 0.3;
        cursor: not-allowed;
        pointer-events: none;
    }

    .pagination-item svg {
        width: 18px;
        height: 18px;
    }

    @media (max-width: 640px) {
        .pagination {
            gap: 1rem;
            flex-direction: column;
            border-radius: 1.5rem;
        }

        .pagination-pages {
            order: -1;
            flex-wrap: wrap;
            justify-content: center;
        }

        .prev,
        .next {
            width: 100%;
            justify-content: center;
        }
    }

    .pagination-info {
        text-align: center;
        margin-top: 1.5rem;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.875rem;
        letter-spacing: 0.01em;
        background: rgba(0, 0, 0, 0.3);
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        width: fit-content;
    }

    .pagination-info strong {
        color: white;
        font-weight: 600;
    }
</style>
