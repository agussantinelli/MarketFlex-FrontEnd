---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import ProductCard from "../components/products/ProductCard.astro";
import { searchProducts } from "../services/product.service";

const searchQuery = Astro.url.searchParams.get("q")?.trim() || "";
const sort = Astro.url.searchParams.get("sort") || "";
const typeParam = Astro.url.searchParams.get("type") || "";
const categoryParam = Astro.url.searchParams.get("category") || "";
const offersParam = Astro.url.searchParams.get("offers") || "";

const response = await searchProducts({
    query: searchQuery,
    sort,
    type: typeParam,
    category: categoryParam,
    offers: offersParam,
    page: 1,
    limit: 20,
});

const products = response.data;
const pagination = response.pagination;
const apiUrl = import.meta.env.PUBLIC_API_URL || "http://localhost:5979/api";
---

<Layout
    title={`MarketFlex | ${searchQuery ? `Resultados: ${searchQuery}` : "Explorar Productos"}`}
>
    <section class="search-section">
        <div class="search-header">
            <h2 class="section-title">
                {
                    searchQuery ? (
                        <>
                            Resultados para "
                            <span class="gradient-text">{searchQuery}</span>"
                            <span class="result-count">
                                ({pagination.total})
                            </span>
                        </>
                    ) : (
                        <>
                            Explorando{" "}
                            <span class="gradient-text">Productos</span>
                            {typeParam && (
                                <span class="filter-tag">
                                    Tipo: {typeParam}
                                </span>
                            )}
                            {categoryParam && (
                                <span class="filter-tag">
                                    Categoría: {categoryParam}
                                </span>
                            )}
                            {offersParam && (
                                <span class="filter-tag">Ofertas</span>
                            )}
                            <span class="result-count">
                                ({pagination.total})
                            </span>
                        </>
                    )
                }
            </h2>

            <style>
                .filter-tag {
                    display: inline-block;
                    background: rgba(34, 197, 94, 0.1);
                    color: var(--primary);
                    padding: 0.25rem 0.75rem;
                    border-radius: 1rem;
                    font-size: 0.9rem;
                    margin: 0 0.5rem;
                    border: 1px solid rgba(34, 197, 94, 0.2);
                }
            </style>

            {
                /* Always show controls if we have products, OR if we are just exploring (to allow sorting/filtering of all items) */
            }
            {
                (products.length > 0 || !searchQuery) && (
                    <div class="search-controls">
                        <div class="sort-wrapper">
                            <select
                                class="sort-select"
                                onchange="window.location.href = this.value"
                            >
                                <option
                                    value={`/search?q=${searchQuery}&sort=`}
                                    selected={
                                        sort === "" || sort === "relevance"
                                    }
                                >
                                    Relevancia
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=price_asc`}
                                    selected={sort === "price_asc"}
                                >
                                    Menor Precio
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=price_desc`}
                                    selected={sort === "price_desc"}
                                >
                                    Mayor Precio
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=name_asc`}
                                    selected={sort === "name_asc"}
                                >
                                    A - Z
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=name_desc`}
                                    selected={sort === "name_desc"}
                                >
                                    Z - A
                                </option>
                                <option
                                    value={`/search?q=${searchQuery}&sort=bestselling`}
                                    selected={sort === "bestselling"}
                                >
                                    Más Vendidos
                                </option>
                            </select>
                            <Icon
                                name="lucide:chevron-down"
                                class="sort-icon"
                            />
                        </div>
                        <button id="filter-btn" class="filter-btn">
                            <Icon
                                name="lucide:list-filter"
                                class="filter-icon"
                            />
                            Filtrar
                        </button>
                    </div>
                )
            }
        </div>

        {/* Modal Coming Soon - Keep existing */}
        <div id="filter-modal" class="modal-backdrop">
            <div class="modal-content">
                <button id="close-modal" class="modal-close">
                    <Icon name="lucide:x" />
                </button>
                <div class="modal-body">
                    <div class="modal-icon-wrapper">
                        <Icon name="lucide:sparkles" class="modal-icon" />
                    </div>
                    <h3 class="modal-title">Próximamente</h3>
                    <p class="modal-text">
                        Estamos trabajando en opciones de filtrado avanzadas
                        para que encuentres exactamente lo que buscás.
                    </p>
                    <button id="close-modal-btn" class="btn btn-primary">
                        Entendido
                    </button>
                </div>
            </div>
        </div>

        <script>
            // Filter modal logic
            const filterBtn = document.getElementById("filter-btn");
            const modal = document.getElementById("filter-modal");
            const closeBtn = document.getElementById("close-modal");
            const closeBtnAction = document.getElementById("close-modal-btn");

            if (filterBtn && modal && closeBtn && closeBtnAction) {
                filterBtn.addEventListener("click", () => {
                    modal.classList.add("active");
                    document.body.style.overflow = "hidden";
                });

                const closeModal = () => {
                    modal.classList.remove("active");
                    document.body.style.overflow = "";
                };

                closeBtn.addEventListener("click", closeModal);
                closeBtnAction.addEventListener("click", closeModal);

                modal.addEventListener("click", (e) => {
                    if (e.target === modal) closeModal();
                });
            }

            // Lazy Loading Logic
            let currentPage = 1;
            const grid = document.getElementById("products-grid");
            const sentinel = document.getElementById("load-more-sentinel");

            // Get current params from URL
            const urlParams = new URLSearchParams(window.location.search);
            const totalPages = parseInt(grid?.dataset.totalPages || "1");

            const apiUrl = grid?.dataset.apiUrl || "http://localhost:5979/api";

            if (sentinel && grid) {
                const observer = new IntersectionObserver(
                    async (entries) => {
                        const entry = entries[0];
                        if (entry.isIntersecting && currentPage < totalPages) {
                            currentPage++;
                            sentinel.classList.add("loading");

                            try {
                                const params = new URLSearchParams(urlParams);
                                params.set("page", currentPage.toString());
                                params.set("limit", "20");

                                const response = await fetch(
                                    `${apiUrl}/products/search?${params.toString()}`,
                                );
                                const result = await response.json();

                                if (
                                    result.status === "success" &&
                                    result.data.length > 0
                                ) {
                                    result.data.forEach((product: any) => {
                                        const card =
                                            document.createElement("article");
                                        card.className = "product-card";

                                        // Helper for formatting price
                                        const formatPrice = (p: number) =>
                                            p.toFixed(2);

                                        const currentPrice =
                                            product.precioActual || 0;
                                        const hasDiscount =
                                            !!product.precioConDescuento;
                                        const priceHtml = hasDiscount
                                            ? `<span class="original-price">$${formatPrice(currentPrice)}</span>
                                           <span class="current-price discount-text">$${formatPrice(product.precioConDescuento)}</span>`
                                            : `<span class="current-price">$${formatPrice(currentPrice)}</span>`;

                                        const discountBadge =
                                            product.descuentoActivo
                                                ? `<div class="badge discount">${product.descuentoActivo.porcentaje ? `-${product.descuentoActivo.porcentaje}%` : "OFERTA"}</div>`
                                                : "";

                                        const freeShippingBadge =
                                            product.envioGratis
                                                ? `<div class="badge free-shipping"><svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/><path d="M15 18H9"/><path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-2.035-2.544A1 1 0 0 0 18.985 10H15"/><circle cx="7" cy="18" r="2"/><circle cx="17" cy="18" r="2"/></svg> Envío Gratis</div>`
                                                : "";

                                        const categoriesHtml =
                                            product.categorias
                                                ?.map(
                                                    (
                                                        cat: string,
                                                        i: number,
                                                    ) => `
                                        <span class="category-name">${cat}</span>
                                        ${i < product.categorias.length - 1 ? '<span class="separator">•</span>' : ""}
                                    `,
                                                )
                                                .join("") || "";

                                        card.innerHTML = `
                                        <div class="image-container">
                                            <img src="${product.foto ? `http://localhost:5979/${product.foto}` : "/placeholder.png"}" 
                                                 alt="${product.nombre}" class="product-image" loading="lazy" />
                                            <div class="price-tag">$${formatPrice(product.precioConDescuento || currentPrice)}</div>
                                            <div class="badges-container">
                                                ${discountBadge}
                                                ${freeShippingBadge}
                                            </div>
                                            ${product.stock === 0 ? '<div class="no-stock-overlay"><span>Sin Stock</span></div>' : ""}
                                            <div class="price-container">${priceHtml}</div>
                                        </div>
                                        <div class="product-info">
                                            <div class="product-categories">${categoriesHtml}</div>
                                            <h3>${product.nombre}</h3>
                                            <div class="product-meta">
                                                ${product.marca ? `<span class="brand-editorial">${product.marca}</span>` : ""}
                                                ${product.autor ? `<span class="author-label">${product.autor}</span>` : ""}
                                            </div>
                                            <p class="description">${product.caracteristicas ? product.caracteristicas.substring(0, 100) + (product.caracteristicas.length > 100 ? "..." : "") : "Sin descripción disponible."}</p>
                                            <button class="btn-add" ${product.stock === 0 ? "disabled" : ""}>
                                                <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
                                                ${product.stock === 0 ? "Sin Stock" : "Agregar"}
                                            </button>
                                        </div>
                                    `;

                                        // Add event listener to the new button
                                        const btn =
                                            card.querySelector(".btn-add");
                                        btn?.addEventListener("click", (e) => {
                                            const token =
                                                localStorage.getItem("token");
                                            if (!token) {
                                                window.location.href = "/login";
                                                return;
                                            }
                                            if (window.triggerSileo) {
                                                window.triggerSileo(
                                                    "success",
                                                    "Producto agregado (simulado)",
                                                );
                                            } else {
                                                alert(
                                                    "Producto agregado (simulado)",
                                                );
                                            }
                                        });

                                        grid.appendChild(card);
                                    });
                                }

                                // If we reached the end, disconnect
                                if (
                                    currentPage >= result.pagination.totalPages
                                ) {
                                    observer.disconnect();
                                    sentinel.remove();
                                }
                            } catch (err) {
                                console.error(
                                    "Error loading more products:",
                                    err,
                                );
                            } finally {
                                sentinel.classList.remove("loading");
                            }
                        }
                    },
                    { threshold: 0.1 },
                );

                observer.observe(sentinel);
            }
        </script>

        {
            products.length > 0 ? (
                <>
                    <div
                        class="products-grid"
                        id="products-grid"
                        data-total-pages={pagination.totalPages}
                        data-api-url={apiUrl}
                    >
                        {products.map((product) => (
                            <ProductCard
                                product={product}
                                showFeatured={false}
                            />
                        ))}
                    </div>
                    {pagination.totalPages > 1 && (
                        <div id="load-more-sentinel" class="load-more-sentinel">
                            <div class="loader-container">
                                <div class="loader-spinner" />
                                <span class="loader-text">
                                    Cargando más productos...
                                </span>
                            </div>
                        </div>
                    )}
                </>
            ) : (
                <div class="empty-results">
                    <div class="empty-icon-wrapper">
                        <Icon name="lucide:search-x" class="empty-icon" />
                    </div>
                    <h3 class="empty-title">
                        {searchQuery ? "Sin resultados" : "Catálogo vacío"}
                    </h3>
                    <p>
                        {searchQuery ? (
                            <>
                                No encontramos productos que coincidan con "
                                <strong>{searchQuery}</strong>".
                                <br />
                                Intentá con otras palabras clave.
                            </>
                        ) : (
                            "No hay productos disponibles en este momento."
                        )}
                    </p>
                    <div class="actions">
                        <a href="/" class="btn btn-secondary btn-sm">
                            Volver al Inicio
                        </a>
                        {searchQuery && (
                            <a href="/search" class="btn btn-primary btn-sm">
                                Ver Todos los Productos
                            </a>
                        )}
                    </div>
                </div>
            )
        }
    </section>
</Layout>

<style>
    .search-section {
        padding: 4rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
        min-height: 60vh;
    }

    .search-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-title {
        text-align: center;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        color: var(--foreground);
        font-weight: 800;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 0;
    }

    .sort-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        min-width: 200px;
    }

    .sort-select {
        appearance: none;
        background: rgba(20, 20, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2rem;
        padding: 0.75rem 1rem;
        padding-right: 2.5rem;
        color: var(--foreground);
        font-family: inherit;
        font-size: 0.9rem;
        width: 100%;
        cursor: pointer;
        backdrop-filter: blur(12px);
        transition: all 0.2s ease;
    }

    .sort-select:hover,
    .sort-select:focus {
        border-color: var(--primary);
        outline: none;
        background: rgba(20, 20, 20, 0.8);
    }

    .sort-icon {
        position: absolute;
        right: 1rem;
        color: #9ca3af;
        pointer-events: none;
        width: 16px;
        height: 16px;
    }

    @media (min-width: 768px) {
        .search-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .section-title {
            margin-bottom: 0;
        }
    }

    .search-controls {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }

    .filter-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: rgba(20, 20, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2rem;
        color: var(--foreground);
        font-weight: 600;
        cursor: pointer;
        backdrop-filter: blur(12px);
        transition: all 0.2s ease;
        font-family: inherit;
        font-size: 0.9rem;
    }

    .filter-btn:hover {
        background: rgba(20, 20, 20, 0.8);
        border-color: var(--primary);
        transform: translateY(-2px);
    }

    .filter-icon {
        width: 18px;
        height: 18px;
    }

    /* Modal Styles */
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .modal-backdrop.active {
        opacity: 1;
        visibility: visible;
    }

    .modal-content {
        background: #1a1a1a;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 2rem;
        width: 90%;
        max-width: 400px;
        position: relative;
        transform: translateY(20px);
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        text-align: center;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-backdrop.active .modal-content {
        transform: translateY(0);
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: transparent;
        border: none;
        color: #9ca3af;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition: all 0.2s;
    }

    .modal-close:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .modal-body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .modal-icon-wrapper {
        width: 64px;
        height: 64px;
        background: rgba(34, 197, 94, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .modal-icon {
        width: 32px;
        height: 32px;
        color: var(--primary);
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        color: white;
    }

    .modal-text {
        color: #9ca3af;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .result-count {
        font-size: 1rem;
        font-weight: 500;
        color: var(--green-cream);
        margin-left: 0.25rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    @media (min-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* Empty State Styling - Premium Glassmorphism */
    .empty-results {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(20, 20, 20, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        margin-top: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .empty-icon-wrapper {
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.05),
            rgba(255, 255, 255, 0.01)
        );
        padding: 1.5rem;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 20px rgba(34, 197, 94, 0.1);
    }

    .empty-icon {
        width: 48px;
        height: 48px;
        color: rgba(255, 255, 255, 0.8);
    }

    .empty-title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(to right, #fff, #a3a3a3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.02em;
    }

    .empty-results p {
        font-size: 1.125rem;
        color: #a3a3a3;
        margin-bottom: 2.5rem;
        max-width: 450px;
        line-height: 1.6;
    }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Sentinel & Loader Styles */
    .load-more-sentinel {
        display: flex;
        justify-content: center;
        padding: 3rem 1rem;
        width: 100%;
        min-height: 120px;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .load-more-sentinel.loading {
        opacity: 1;
    }

    .loader-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }

    .loader-spinner {
        width: 24px;
        height: 24px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        border-top-color: var(--primary);
        animation: spin 0.8s linear infinite;
    }

    .loader-text {
        font-size: 0.85rem;
        color: #9ca3af;
        font-weight: 500;
        letter-spacing: 0.02em;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>
