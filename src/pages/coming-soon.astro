---
import Layout from "../layouts/Layout.astro";
---

<Layout title="MarketFlex | Próximamente">
    <div class="hero-center">
        <h1>MarketFlex</h1>
        <p class="coming-soon">Próximamente</p>
    </div>
</Layout>

<script>
    import { sileo } from "sileo";

    // Trigger notification on page load
    sileo.success({
        title: "Has accedido correctamente",
    });
</script>

<style>
    h1 {
        font-size: clamp(3rem, 10vw, 6rem);
        margin-bottom: 1rem;
        letter-spacing: -0.04em;
        color: var(--green-cream);
    }

    .coming-soon {
        font-size: 1.25rem;
        font-weight: 500;
        color: var(--green-cream);
        text-transform: uppercase;
        letter-spacing: 0.5em;
        opacity: 0.6;
        margin-top: -1rem;
    }
</style>
