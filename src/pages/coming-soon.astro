---
import Layout from "../layouts/Layout.astro";
import Notifications from "../components/common/Notifications";
---

<Layout title="MarketFlex | Próximamente" showToaster={false}>
    <Notifications
        client:only="react"
        message="Has accedido correctamente"
        delay={200}
        position="top-center"
        offset={80}
        requiredQueryParam="success"
    />
    <div class="hero-center">
        <h1>MarketFlex</h1>
        <p class="coming-soon">Próximamente</p>
    </div>
</Layout>

<style>
    h1 {
        font-size: clamp(3rem, 10vw, 6rem);
        margin-bottom: 1rem;
        letter-spacing: -0.04em;
        color: var(--green-cream);
    }

    .coming-soon {
        font-size: 1.25rem;
        font-weight: 500;
        color: var(--green-cream);
        text-transform: uppercase;
        letter-spacing: 0.5em;
        opacity: 0.6;
        margin-top: -1rem;
    }
</style>
