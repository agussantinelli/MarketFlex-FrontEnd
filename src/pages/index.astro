---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Notifications from "../components/common/Notifications";
import ProductCard from "../components/products/ProductCard.astro";
import {
	getFeaturedProducts,
	getNewArrivals,
} from "../services/product.service";

const products = await getFeaturedProducts();
const newArrivals = await getNewArrivals(); // Should be 7-8 based on seed
const user = Astro.url.searchParams.get("user") || "Usuario";
const isNewUser = Astro.url.searchParams.get("new") === "true";
const welcomeMessage = isNewUser
	? `¡Bienvenido, ${user}!`
	: `Bienvenido de nuevo, ${user}`;
---

<Layout title="MarketFlex | Premium Marketplace" showToaster={false}>
	<Notifications
		client:only="react"
		message={welcomeMessage}
		type="success"
		delay={200}
		position="top-center"
		requiredQueryParam="login_success"
	/>
	<section class="products-section">
		<h2 class="section-title">
			Productos <span class="gradient-text">Destacados</span>
		</h2>

		<div class="products-grid">
			{products.map((product) => <ProductCard product={product} />)}
		</div>
	</section>

	<section class="products-section new-arrivals-section">
		<h2 class="section-title">
			Recién <span class="gradient-text">Llegados</span>
			<Icon name="lucide:sparkles" class="title-icon" />
		</h2>

		<div class="carousel-wrapper">
			<button class="carousel-btn prev" aria-label="Anterior">
				<Icon name="lucide:chevron-left" size={24} />
			</button>

			<div class="carousel-container" id="new-arrivals-carousel">
				<div class="carousel-track">
					{
						newArrivals.slice(0, 8).map((product) => (
							<div class="carousel-item">
								<ProductCard
									product={product}
									showFeatured={false}
								/>
							</div>
						))
					}

					<div class="carousel-item view-more-card">
						<a href="/search?sort=newest" class="view-more-btn">
							<div class="icon-wrapper">
								<Icon name="lucide:arrow-right" size={32} />
							</div>
							<span>Ver más</span>
						</a>
					</div>
				</div>
			</div>

			<button class="carousel-btn next" aria-label="Siguiente">
				<Icon name="lucide:chevron-right" size={24} />
			</button>
		</div>
	</section>
</Layout>

<style>
	/* Products Section */
	.products-section {
		padding: 4rem 1rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.new-arrivals-section {
		padding-top: 2rem;
	}

	.section-title {
		text-align: center;
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: 3rem;
		color: var(--foreground);
		font-weight: 800;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.title-icon {
		color: rgba(var(--green-primary), 1);
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.1);
			opacity: 0.8;
		}
	}

	.products-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
		gap: 1.5rem;
		padding: 1rem;
	}

	@media (min-width: 1024px) {
		.products-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}

	/* Carousel Styles */
	.carousel-wrapper {
		position: relative;
		width: 100%;
		display: flex;
		align-items: center;
	}

	.carousel-container {
		width: 100%;
		overflow-x: auto;
		padding: 1rem 0;
		/* Hide scrollbar for cleaner look but keep functionality */
		scrollbar-width: none; /* Firefox */
		-ms-overflow-style: none; /* IE/Edge */
		scroll-behavior: smooth;
	}

	.carousel-container::-webkit-scrollbar {
		display: none; /* Chrome, Safari, Opera */
	}

	.carousel-track {
		display: flex;
		align-items: stretch;
		gap: 1.5rem;
		padding: 1rem;
		/* Ensure exact width for items */
		width: max-content;
	}

	.carousel-item {
		width: 280px; /* Matched typical grid item width at common breakpoints */
		flex-shrink: 0;
	}

	/* Carousel Buttons */
	.carousel-btn {
		display: none; /* Hidden on mobile by default */
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		z-index: 20;
		background: rgba(var(--green-900), 0.6);
		border: 1px solid rgba(var(--green-primary), 0.4);
		color: rgba(var(--green-primary), 1);
		width: 50px;
		height: 50px;
		border-radius: 50%;
		cursor: pointer;
		align-items: center;
		justify-content: center;
		backdrop-filter: blur(12px);
		box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.carousel-btn:hover {
		background: rgba(var(--green-primary), 0.2);
		border-color: rgba(var(--green-primary), 1);
		transform: translateY(-50%) scale(1.1);
		box-shadow: 0 0 20px rgba(var(--green-primary), 0.4);
	}

	.carousel-btn:active {
		transform: translateY(-50%) scale(0.95);
	}

	.carousel-btn.prev {
		left: -25px;
	}

	.carousel-btn.next {
		right: -25px;
	}

	@media (min-width: 768px) {
		.carousel-btn {
			display: flex;
		}
	}

	/* View More Card */
	.view-more-card {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.view-more-btn {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		width: 100%;
		height: 100%;
		background: rgba(var(--green-900), 0.2);
		border: 1px dashed rgba(var(--green-primary), 0.5);
		border-radius: 16px;
		color: var(--foreground);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.view-more-btn:hover {
		background: rgba(var(--green-900), 0.4);
		border-style: solid;
		transform: translateY(-4px);
		box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.2);
	}

	.icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 64px;
		height: 64px;
		border-radius: 50%;
		background: rgba(var(--green-primary), 0.2);
		color: rgba(var(--green-primary), 1);
		transition: transform 0.3s ease;
	}

	.view-more-btn:hover .icon-wrapper {
		transform: translateX(5px);
		background: rgba(var(--green-primary), 0.4);
	}

	.view-more-btn span {
		font-weight: 600;
		font-size: 1.1rem;
		color: rgba(var(--green-primary), 1);
	}
</style>

<script>
	function setupCarousel() {
		const container = document.getElementById("new-arrivals-carousel");
		const prevBtn = document.querySelector(".carousel-btn.prev");
		const nextBtn = document.querySelector(".carousel-btn.next");

		if (!container || !prevBtn || !nextBtn) return;

		const scrollAmount = 280 + 24; // item width + gap

		prevBtn.addEventListener("click", () => {
			container.scrollBy({ left: -scrollAmount, behavior: "smooth" });
		});

		nextBtn.addEventListener("click", () => {
			container.scrollBy({ left: scrollAmount, behavior: "smooth" });
		});
	}

	// Setup on initial load and after view transitions
	setupCarousel();
	document.addEventListener("astro:page-load", setupCarousel);
</script>
