---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Notifications from "../components/common/Notifications";
import ProductCard from "../components/products/ProductCard.astro";
import {
	getFeaturedProducts,
	getNewArrivals,
} from "../services/product.service";

const products = await getFeaturedProducts();
const newArrivals = await getNewArrivals(); // Should be 7-8 based on seed
const user = Astro.url.searchParams.get("user") || "Usuario";
const isNewUser = Astro.url.searchParams.get("new") === "true";
const welcomeMessage = isNewUser
	? `¡Bienvenido, ${user}!`
	: `Bienvenido de nuevo, ${user}`;
---

<Layout title="MarketFlex | Premium Marketplace" showToaster={false}>
	<Notifications
		client:only="react"
		message={welcomeMessage}
		type="success"
		delay={200}
		position="top-center"
		requiredQueryParam="login_success"
	/>
	<section class="products-section">
		<h2 class="section-title">
			Productos <span class="gradient-text">Destacados</span>
		</h2>

		<div class="products-grid">
			{products.map((product) => <ProductCard product={product} />)}
		</div>
	</section>

	<section class="products-section new-arrivals-section">
		<h2 class="section-title">
			Recién <span class="gradient-text">Llegados</span>
			<Icon name="lucide:sparkles" class="title-icon" />
		</h2>

		<div class="carousel-container">
			<div class="carousel-track">
				{
					newArrivals.slice(0, 8).map((product) => (
						<div class="carousel-item">
							<ProductCard
								product={product}
								showFeatured={false}
							/>
						</div>
					))
				}

				<div class="carousel-item view-more-card">
					<a href="/search?sort=newest" class="view-more-btn">
						<div class="icon-wrapper">
							<Icon name="lucide:arrow-right" size={32} />
						</div>
						<span>Ver más</span>
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Products Section */
	.products-section {
		padding: 4rem 1rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.new-arrivals-section {
		padding-top: 2rem;
	}

	.section-title {
		text-align: center;
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: 3rem;
		color: var(--foreground);
		font-weight: 800;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.title-icon {
		color: rgba(var(--green-primary), 1);
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.1);
			opacity: 0.8;
		}
	}

	.products-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
		gap: 1.5rem;
		padding: 1rem;
	}

	@media (min-width: 1024px) {
		.products-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}

	/* Carousel Styles */
	.carousel-container {
		width: 100%;
		overflow-x: auto;
		padding: 1rem 0;
		/* Hide scrollbar for cleaner look but keep functionality */
		scrollbar-width: none; /* Firefox */
		-ms-overflow-style: none; /* IE/Edge */
	}

	.carousel-container::-webkit-scrollbar {
		display: none; /* Chrome, Safari, Opera */
	}

	.carousel-track {
		display: flex;
		gap: 1.5rem;
		padding: 1rem;
		/* Ensure exact width for items */
		width: max-content;
	}

	.carousel-item {
		width: 280px; /* Fixed width for carousel items */
		flex-shrink: 0;
	}

	/* View More Card */
	.view-more-card {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.view-more-btn {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		width: 100%;
		height: 100%;
		min-height: 380px; /* Match product card approx height */
		background: rgba(var(--green-900), 0.2);
		border: 1px dashed rgba(var(--green-primary), 0.5);
		border-radius: 16px;
		color: var(--foreground);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.view-more-btn:hover {
		background: rgba(var(--green-900), 0.4);
		border-style: solid;
		transform: translateY(-4px);
		box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.2);
	}

	.icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 64px;
		height: 64px;
		border-radius: 50%;
		background: rgba(var(--green-primary), 0.2);
		color: rgba(var(--green-primary), 1);
		transition: transform 0.3s ease;
	}

	.view-more-btn:hover .icon-wrapper {
		transform: translateX(5px);
		background: rgba(var(--green-primary), 0.4);
	}

	.view-more-btn span {
		font-weight: 600;
		font-size: 1.1rem;
		color: rgba(var(--green-primary), 1);
	}
</style>
