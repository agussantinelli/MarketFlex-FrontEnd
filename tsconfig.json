{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "vitest/globals"
        ],
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "*.ts",
        "*.mjs",
        "*.mts"
    ]
}